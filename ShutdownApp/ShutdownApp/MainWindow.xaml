<Window x:Class="ShutdownApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShutdownApp"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Shutdown" Height="200" Width="400">
    <Grid>
        <Label Content="Enter the time before turning off the computer" HorizontalAlignment="Left" Margin="20,18,0,0" VerticalAlignment="Top" Width="260"/>
        <TextBox Name="textSet" HorizontalAlignment="Left" Margin="25,51,0,0" Text="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="minutes" HorizontalAlignment="Left" Margin="145,46,0,0" VerticalAlignment="Top" Height="23"/>
        <Button Name="buttonSet" Content="Set Shutdown" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Center" Width="120" Click="buttonSet_Click"/>
        <Button Name="buttonCancel" Content="Cancel Shutdown" HorizontalAlignment="Left" Margin="25,107,0,0" VerticalAlignment="Center" Width="120" Click="buttonCancel_Click" IsEnabled="False"/>

    </Grid>
</Window>
