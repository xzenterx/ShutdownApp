<Window x:Class="ShutdownApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShutdownApp"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Shutdown" Height="300" Width="500">
    <Grid>
        <Label Content="Enter the time before turning off the computer" Margin="20,18,120,0" VerticalAlignment="Top"/>
        <TextBox Name="textSet" Margin="25,51,355,0" Text="60" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="minutes" HorizontalAlignment="Left" Margin="150,46,0,0" VerticalAlignment="Top" Height="23"/>
        <Button Name="buttonSet" Content="Set Shutdown" HorizontalAlignment="Left" Margin="25,84,0,0" VerticalAlignment="Top" Width="120" Click="buttonSet_Click"/>
        <Button Name="buttonCancel" Content="Cancel Shutdown" HorizontalAlignment="Left" Margin="25,141,0,0" VerticalAlignment="Top" Width="120" Click="buttonCancel_Click" IsEnabled="False"/>
        <Label Name="timer" Content="0" HorizontalAlignment="Left" Margin="310,223,0,0" VerticalAlignment="Top" Width="180"/>

    </Grid>
</Window>
